FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "flowState"
dimensions      [0 2 -2 0 0 0 0];

internalField   uniform $k;

boundaryField
{
    "(Outlet|Inlet|Top|Bottom)"
    {
        type            freestream;
        freestreamValue $internalField;
        value           $internalField;
    }

    "Airfoil.*"
    {
        type            fixedValue; //kLowReWallFunction;
        value           uniform 0;
    }

    "(Front|Back)"
    {
        type            empty;
    }

    oversetPatch
    {
        type            overset;
    }
}

